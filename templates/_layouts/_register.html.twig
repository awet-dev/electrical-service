<div class="w-50 mx-auto">
    <!-- Pills navs -->
    <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
        <li class="nav-item" role="presentation">
            <a
                    class="nav-link active"
                    id="tab-login"
                    data-mdb-toggle="pill"
                    href="#pills-login"
                    role="tab"
                    aria-controls="pills-login"
                    aria-selected="true"
            >Login</a
            >
        </li>
        <li class="nav-item" role="presentation">
            <a
                    class="nav-link"
                    id="tab-register"
                    data-mdb-toggle="pill"
                    href="#pills-register"
                    role="tab"
                    aria-controls="pills-register"
                    aria-selected="false"
            >Register</a
            >
        </li>
    </ul>
    <!-- Pills navs -->

    <!-- Pills content -->
    <div class="tab-content">
        <div
                class="tab-pane fade show active"
                id="pills-login"
                role="tabpanel"
                aria-labelledby="tab-login"
        >
            <form action="{{ path('app_login') }}" method="post">
                <!-- Email input -->
                <div class="row">
                    <div class="form-outline mb-4 col">
                        <input name="email" type="email" id="loginName" placeholder="Email" class="form-control" />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4 col">
                        <input name="password" type="password" id="loginPassword" placeholder="Password" class="form-control" />
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>

                <!-- 2 column grid layout -->
                <div class="row mb-4">
                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                            <input
                                    name="_remember_me"
                                    class="form-check-input"
                                    type="checkbox"
                                    id="loginCheck"
                            />
                            <label class="form-check-label" for="loginCheck"> Remember me </label>
                        </div>

                    </div>

                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Simple link -->
                        <a href="#!">Forgot password?</a>
                    </div>

                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>Not a member? <a href="#!">Register</a></p>
                </div>
            </form>
        </div>

        <div
                class="tab-pane fade"
                id="pills-register"
                role="tabpanel"
                aria-labelledby="tab-register"
        >
            <form action="{{ path('register') }}" method="post">

                <div class="row">

                    <div class="form-outline mb-4 col mr-1 col">
                        <input name="firstName" type="text" id="firstName" placeholder="First Name" class="form-control" />
                    </div>

                    <div class="form-outline mb-4 col mr-1 col">
                        <input name="lastName" type="text" id="lastName" placeholder="Last Name" class="form-control" />
                    </div>

                </div>

                <div class="row">
                    <div class="form-outline mb-4 col mr-1 col">
                        <input name="email" type="email" id="email" placeholder="Email" class="form-control" />
                    </div>
                    <div class="form-outline mb-4 col mr-1 col">
                        <input name="password" type="password" id="Password" placeholder="Password" class="form-control" />
                    </div>
                </div>

                <div class="row">

                    <div class="form-outline mb-4 col mr-1 col">
                        <input name="telNumber" type="tel" id="telephone" placeholder="Telephone" class="form-control" />
                    </div>

                    <div class="form-outline mb-4 col mr-1 col">
                        <input name="address" type="text" id="address" placeholder="Address" class="form-control" />
                    </div>

                </div>

                <div class="form-check d-flex justify-content-center mb-4">
                    <input
                            class="form-check-input me-2"
                            type="checkbox"
                            id="registerCheck"
                            aria-describedby="registerCheckHelpText"
                    />
                    <label class="form-check-label" for="registerCheck">
                        I have read and agree to the terms
                    </label>
                </div>

                <button type="submit" class="btn btn-primary btn-block mb-3">Sign Up</button>
            </form>
        </div>
    </div>

</div>
<!-- Pills content -->