{% extends 'base.html.twig' %}

{% block title %}Attendance{% endblock %}

{% block body %}
    <h1>Attendance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attendance.id }}</td>
            </tr>
            <tr>
                <th>CheckedAt</th>
                <td>{{ attendance.checkedAt ? attendance.checkedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ attendance.status }}</td>
            </tr>
            <tr>
                <th>IsPresent</th>
                <td>{{ attendance.isPresent ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>AbsenceReason</th>
                <td>{{ attendance.absenceReason }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('attendance_index') }}">back to list</a>

    <a href="{{ path('attendance_edit', {'id': attendance.id}) }}">edit</a>

    {{ include('attendance/_delete_form.html.twig') }}
{% endblock %}
