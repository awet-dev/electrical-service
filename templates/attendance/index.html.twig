{% extends 'base.html.twig' %}

{% block title %}Attendance index{% endblock %}

{% block body %}
    <h1>Attendance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CheckedAt</th>
                <th>Status</th>
                <th>IsPresent</th>
                <th>AbsenceReason</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attendance in attendances %}
            <tr>
                <td>{{ attendance.id }}</td>
                <td>{{ attendance.checkedAt ? attendance.checkedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ attendance.status }}</td>
                <td>{{ attendance.isPresent ? 'Yes' : 'No' }}</td>
                <td>{{ attendance.absenceReason }}</td>
                <td>
                    <a href="{{ path('attendance_show', {'id': attendance.id}) }}">show</a>
                    <a href="{{ path('attendance_edit', {'id': attendance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('attendance_new') }}">Create new</a>
{% endblock %}
